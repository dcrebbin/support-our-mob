{
  "manifest_version": 3,
  "name": "Support Our Mob 🖤💛❤️",
  "description": "Right click on any input to display an option to show mob your support by instantly add these emojis: 🖤💛❤️",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/service_worker.js"
  },

  "permissions": ["contextMenus", "storage"],

  "host_permissions": ["<all_urls>"]
}
